@model Agri_Energy.Models.ProductDetailsViewModel
@{
    ViewData["Title"] = "Product Details";
}

<body class="blog-details-page">
    <main class="main">
        <!--(Microsoft, 2025)-->
        <div class="page-title dark-background" data-aos="fade" style="background-image: url(/assets/img/page-title-bg.webp);">
            <div class="container position-relative">
                <h1>Blog Details</h1>
                <nav class="breadcrumbs">
                    <ol>
                        <li><a href="@Url.Action("Products", "Employee")">Manage Products</a></li>
                        <li class="current">Product Details</li>
                    </ol>
                </nav>
            </div>
        </div><!-- End Page Title -->
        <div class="container">
            <div class="col-lg-8" style="margin: auto;">

                <!-- Blog Details Section -->
                <section id="blog-details" class="blog-details section">
                    <div class="container">

                        <article class="article">

                            <div class="post-img">
                                <img src="@Model.Product.ImageUrl" alt="@Model.Product.Name" class="img-fluid rounded shadow" />
                            </div>

                            <h2 class="title">@Model.Product.Name</h2>

                            <div class="meta-top">
                                <ul>
                                    <li class="d-flex align-items-center"><i class="bi bi-person"></i> <a>@Model.Farmer?.Email</a></li>
                                    <li class="d-flex align-items-center"><i class="bi bi-clock"></i> <a>@Model.Product.DateListed.ToString("yyyy-MM-dd")</a></li>
                                    <li class="d-flex align-items-center"><i class="bi bi-geo"></i> <a>@Model.Product.Location</a></li>
                                </ul>
                            </div><!-- End meta top -->
                            <div class="content">
                                <h3>R @Model.Product.Price</h3>
                                <blockquote>
                                    <p>
                                        @Model.Product.Description
                                    </p>
                                </blockquote>
                            </div><!-- End post content -->
                            <div class="meta-bottom">
                                <i class="bi bi-folder"></i>
                                <ul class="cats">
                                    <li><a>@Model.Product.ProductTypeId</a></li>
                                </ul>

                                <i class="bi bi-tags"></i>
                                <ul class="tags">
                                    <li><a>@Model.Product.Category</a></li>
                                </ul>
                            </div><!-- End meta bottom -->

                        </article>
                    </div>
                </section><!-- /Blog Details Section -->
            </div>
        </div>
    </main>



    <!-- Vendor JS Files -->
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/assets/vendor/aos/aos.js"></script>
    <script src="~/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="assets/vendor/glightbox/js/glightbox.min.js"></script>

    <!-- Main JS File -->
    <script src="~/assets/js/main.js"></script>

</body>
